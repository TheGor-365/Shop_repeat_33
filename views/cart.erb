<h2>Your cart</h2>

<div id="cart">

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Qty</th>
      </tr>
    </thead>
    <tbody>
      <% total_price = 0 %>
      <% total_qty = 0 %>
      <% @items.each do |item| %>
      <tr>
        <th scope="row">1</th>
        <td><%= item[0].title %></td>
        <td><%= item[0].price %></td>
        <td><%= item[1] %></td>
      </tr>
      <% total_price += item[0].price %>
      <% total_qty += item[1].to_i %>
      <tr>
        <td>Total</td>
        <td><%= total_price %></td>
        <td><%= total_qty %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <form action="/place_order" method="post">
    <input type="hidden" name="orders[orders_input]" value="<%= @orders_input %>">

    <div class="form-group">
      <label>Name</label>
      <input class="form-control" type="text" name="order[name]" placeholder="Input your name">
    </div>

    <div class="form-group">
      <label>Phone</label>
      <input class="form-control" type="text" name="order[phone]" placeholder="Input your phone">
    </div>

    <div class="form-group">
      <label>Delivery address</label>
      <textarea class="form-control" name="order[address]" placeholder="Input your address"></textarea>
    </div>

    <button type="submit" class="btn btn-success btn-lg">Place this order!</button>
    <button class="btn btn-danger btn-lg" onclick="return cancel_order()">Cancel</button>
  </form>
</div>
